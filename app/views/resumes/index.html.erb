<div class="container py-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt me-2"></i>My Resumes</h2>
        <%= link_to new_resume_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-1"></i>Create New Resume
        <% end %>
      </div>
      <% if @resumes.any? %>
        <div class="row">
          <% @resumes.each do |resume| %>
            <div class="col-md-6 mb-4">
              <div class="card shadow h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= resume.title %></h5>
                  <p class="card-text text-muted">
                    <small>
                      <i class="fas fa-calendar me-1"></i>
                      Created: <%= resume.created_at.strftime("%B %d, %Y") %>
                    </small>
                  </p>
                  <div class="mb-3">
                    <strong>Summary:</strong>
                    <p class="text-muted"><%= truncate(resume.summary, length: 100) %></p>
                  </div>
                  <div class="mb-3">
                    <strong>Education:</strong> <%= resume.educations.count %> entries<br>
                    <strong>Experience:</strong> <%= resume.experiences.count %> entries<br>
                    <strong>Skills:</strong> <%= resume.skills.count %> skills<br>
                    <strong>Certifications:</strong> <%= resume.certifications.count %> certifications
                  </div>
                  <div class="d-flex flex-wrap gap-2 mb-3">
                    <% if resume.rirekisho_pdf.attached? %>
                      <%= link_to download_rirekisho_resume_path(resume), class: "btn btn-outline-primary btn-sm" do %>
                        <i class="fas fa-download me-1"></i>履歴書 PDF
                      <% end %>
                    <% end %>
                    <% if resume.shokumu_keirekisho_pdf.attached? %>
                      <%= link_to download_shokumu_keirekisho_resume_path(resume), class: "btn btn-outline-primary btn-sm" do %>
                        <i class="fas fa-download me-1"></i>職務経歴書 PDF
                      <% end %>
                    <% end %>
                  </div>
                  <div class="d-flex gap-2">
                    <%= link_to "View", resume_path(resume), class: "btn btn-primary btn-sm" %>
                    <%= link_to "Edit", edit_resume_path(resume), class: "btn btn-outline-secondary btn-sm" %>
                    <%= link_to "Delete", resume_path(resume), method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "btn btn-outline-danger btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-file-alt text-muted" style="font-size: 4rem;"></i>
          <h4 class="text-muted mt-3">No resumes yet</h4>
          <p class="text-muted">Create your first resume to get started!</p>
          <%= link_to new_resume_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i>Create Your First Resume
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
