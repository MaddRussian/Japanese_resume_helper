<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm mt-5">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Sign In</h2>
            <p class="text-muted">Welcome back to Nichou</p>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          wrapper: :vertical_form,
                          wrapper_html: { class: 'mb-3' } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          wrapper: :vertical_form,
                          wrapper_html: { class: 'mb-3' } %>
              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
                </div>
              <% end %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Sign In", class: "btn btn-primary btn-lg w-100 mb-3" %>
            </div>
          <% end %>
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
